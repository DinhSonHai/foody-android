<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000"
    android:orientation="vertical"
    tools:context=".ProvinceActivity">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_height="40dp">

        <TextView
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:textColor="#EAE4E4"
            android:id="@+id/huy"
            android:textSize="18sp"
            android:text="Hủy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="8"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="#EAE4E4"
            android:id="@+id/chonTinhThanh"
            android:textSize="20sp"
            android:text="Chọn Tỉnh thành"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="#EAE4E4"
            android:id="@+id/xong"
            android:textSize="18sp"
            android:text="Xong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:id="@+id/search_province"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/search"
            android:paddingLeft="8dp"
            android:background="@drawable/search_province"
            android:hint="Tìm Tỉnh thành"
            android:textSize="16sp">

        </EditText>

        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/province_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>